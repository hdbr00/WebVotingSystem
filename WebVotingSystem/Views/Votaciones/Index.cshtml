@model IEnumerable<WebVotingSystem.Models.Candidato>

<section id="candidatos">
    <!--facilities-->
    <div class="row container-fluid pt-5">
        <div class="titulo mx-auto">
            <h1>¿Por cuál candidato desea votar?</h1>
        </div>
        @if (Model.Count() == 0)
        {
        <div class="col-12">
            <h1 class="d-flex justify-content-center text-danger">¡Usted ya realizó su voto!</h1>
        </div>
        }
        <div class="row justify-content-center">
            @{
                int count = 1;
                foreach (Candidato item in Model)
                {
                    var id = "resultadoCandidato" + item.IdCandidato.ToString();
                    <div class="col-md-3">
                        <div class="card text-center mt-4">
                            <img src="@item.FotoUrl" class="card-img-top" height="286" width="180">
                            <div class="card-body">
                                <h2 class="card-title">@item.Nombre</h2>
                                <p class="card-text">@item.Partido</p>
                                <button type="button" class="btn btn-primary btn-votar" onclick="registrarVotacion(@item.IdCandidato)">Votar</button>
                                <p id="@id" class="mt-3"></p>
                            </div>
                        </div>
                    </div>
                    count = count + 1;
                }
            }
        </div>
    </div>
</section>


<input type="hidden" id="iIdCandidato">

<script src="~/js/votacion.js"></script>
<script>
    cargarCandidatos();
</script>