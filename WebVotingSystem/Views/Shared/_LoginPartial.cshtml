@using Microsoft.AspNetCore.Identity
@using WebVotingSystem.Models;
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager


<ul class="nav-links">
    @if (SignInManager.IsSignedIn(User))
    {

        <li><a asp-controller="Votaciones" asp-action="Index">Votación</a></li>
        <li><a asp-controller="Opiniones" asp-action="Index">Opiniones</a></li>

        <li>
            <form style="display: inline;" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn-votacion">Cerrar sesión</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark btn-votacion" asp-area="Identity" asp-page="/Account/Login">Ir a votación</a>
        </li>
    }
</ul>

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Saludos @User.Identity.Name!</a>
}
