@model WebVotingSystem.Models.Candidato

@{
    var titulo = "Crear nuevo candidato";
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model.IdCandidato != 0)
        {
            titulo = "Editar candidato";
            <input type="hidden" asp-for="IdCandidato" />
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@titulo</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div style="display: none;">
                <input asp-for="FotoUrl" class="form-control" value="0" />
            </div>
            
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Partido"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Partido" class="form-control" />
                    <span asp-validation-for="Partido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Imagen
                </div>
                <div class="col-8">
                    @* CONTROL PARA CARGAR ARCHIVO *@
                    <div class="form-group row">
                        <div class="col-4">
                            Imagen
                        </div>
                        <div class="col-8">
                            <input type="file" id="cargar" name="archivos" multiple class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.IdCandidato != 0)
                    {
                        <partial name="~/Views/Shared/_BotonesGuardarRegresar.cshtml" model="Model.IdCandidato" />
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" onclick="return ValidarImagen();" class="btn btn-primary form-control">Crear</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        @if (Model.IdCandidato != 0)
        {
            <div class="col-3 offset-1">
                <img src="@Model.FotoUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
        }
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>

        function ValidarImagen() {
        }

    </script>
}
